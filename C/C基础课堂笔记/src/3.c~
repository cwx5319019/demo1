usleep(90000);
printf("*************************   **********\n");
usleep(90000);
printf("**********************   *************\n");
usleep(90000);
printf("*****************   ******************\n");
usleep(90000);
printf("***************   ********************\n");
usleep(90000);
printf("***************   ********************\n");
usleep(90000);
printf("*************   **********************\n");
usleep(900000);
